<div class="contents row">
  <%= form_tag("/games/#{@game.id}", method: :patch ) do %>
    <h3>
      編集する
    </h3>
    <input type="text" name="image" value="<%= @game.image %>" placeholder="Image Url" autofocus="true">
    <textarea name="text" placeholder="text" rows="10" cols="30"><%= @game.text %></textarea>
    <input type="submit" value="SENT">
  <% end %>
</div>